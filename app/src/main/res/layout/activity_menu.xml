<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_logo"
    tools:context=".view.MenuActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="299dp"
        android:layout_height="480dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95">

        <ImageButton
            android:id="@+id/new_game_button"
            android:layout_width="192dp"
            android:layout_height="48dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/btn_empezar_partida"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.065" />

        <ImageButton
            android:id="@+id/ranking_button"
            android:layout_width="192dp"
            android:layout_height="48dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/btn_ranking"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/minecraft"
            app:layout_constraintVertical_bias="0.058" />

        <ImageButton
            android:id="@+id/graphic_button"
            android:layout_width="192dp"
            android:layout_height="48dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/btn_graficos"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gamma_button"
            app:layout_constraintVertical_bias="0.119" />

        <ImageButton
            android:id="@+id/gamma_button"
            android:layout_width="192dp"
            android:layout_height="48dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/btn_gamas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ranking_button"
            app:layout_constraintVertical_bias="0.052" />

        <ImageButton
            android:id="@+id/minecraft"
            android:layout_width="192dp"
            android:layout_height="48dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/btn_minecraft"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_game_button"
            app:layout_constraintVertical_bias="0.041" />

        <ImageButton
            android:id="@+id/salir"
            android:layout_width="192dp"
            android:layout_height="48dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/btn_salir"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/graphic_button"
            app:layout_constraintVertical_bias="0.08"
            />

        <ImageButton
            android:id="@+id/idioma"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/idioma"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/salir"
            app:layout_constraintHorizontal_bias="0.504"

            app:layout_constraintVertical_bias="0.3"
             />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>